@{
    ViewData["Title"] = "ToDoDashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome! @User.Identity.Name</h1>
    <table class="table">
    <thead>
        <tr>
            <td>Done</td>
            <td>Description</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" @(item.IsCompleted ? "checked" : "") />
                    </td>
                    <td>@item.Description</td>
                    <td>
                        <a href="#">Delete</a> | <a href="#">Update</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
</div>
<a asp-controller="Home" asp-action="CreateEditToDoItem">Update Task List</a>